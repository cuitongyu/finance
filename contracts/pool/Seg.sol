pragma solidity 0.5.16;

contract Pool {
    function exchangePool(
        uint256 _level,
        uint256 _type,
        address _to
    ) public;
}

contract Seg {
    Pool pool;
    using SafeMath for uint256;

    address private owner;

    uint256 private constant basePrice = 10**uint256(18);

    uint256[] private levelPrice;

    address[] private constructors;

    constructor(address _constructor, address _owner) public {
        levelPrice.push(10 * basePrice);
        levelPrice.push(100 * basePrice);
        levelPrice.push(500 * basePrice);
        levelPrice.push(1000 * basePrice);
        levelPrice.push(2000 * basePrice);
        levelPrice.push(5000 * basePrice);
        levelPrice.push(10000 * basePrice);

        pool = Pool(_constructor);
        owner = _owner;
    }

    mapping(address => uint256) public rewards;

    modifier onlyOwnerOf() {
        require(owner == msg.sender, "Only owner can use");
        _;
    }

    modifier onlyConstructorsOf(address _address) {
        bool isConstructors = false;
        for (uint256 i = 0; i < constructors.length; i++) {
            isConstructors = constructors[i] == _address;
            if (isConstructors) {
                break;
            }
        }
        require(isConstructors, "Only owner can use");
        _;
    }

    function addOwern(address _constructor) public onlyOwnerOf {
        constructors.push(_constructor);
    }

    function setAmount(uint256 amount, address _address)
        external
        onlyConstructorsOf(msg.sender)
    {
        require(amount > 0, "Cannot set 0");
        if (_address != address(0)) {
            rewards[_address] = amount.add(rewards[_address]);
        }
    }

    function exchange(
        uint256 _level,
        uint256 _type,
        address _to
    ) external {
        require(levelPrice[_level] < rewards[_to], "Cannot exchange 0");

        pool.exchangePool(_level, _type, _to);

        if (_to != address(0)) {
            rewards[_to] = rewards[_to].sub(levelPrice[_level]);
        }
    }
}
